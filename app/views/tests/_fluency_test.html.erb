<h1>Benton Verbal Fluency Test</h1>

<h2>Instructions: <span><%= @test.instructions %></span></h2>

<% if !@test.current_list.blank? %>
    <h3> You've already said these animals: </h3>
<% end %>

<% @test.current_list.each_with_index do |item, i| %>
<p> 
    <%= item %> 
        <span> 
            <%= render partial: "tests/delete_entry_fluency_test",
                       :locals => { :stage => @test.current_stage, :word => item } %>
</span></p>
<% end %>

<%= render partial: "tests/add_entry_fluency_test",
           :locals => { :stage => @test.current_stage } %>