<% if @test.completed? %>
    <p> Test completed</p>
<% else %>
    <%= turbo_frame_tag :fluency_form do %>
        <div>
            <h1>Memory Test</h1>
            
            <h2>
                Stage: 
                <span><%= @test.instructions %></span>
            </h2>

                <%= render partial: "tests/primary_words_memory_test",
                           :locals => { :stage => @test.current_stage, :words => @test.data["w1"] } %>
            
        </div>
    <% end %>
<% end %>